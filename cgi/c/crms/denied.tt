[% crms.StartHTML('No Access', '<link rel="stylesheet" type="text/css" href="/c/crms/css/review.css"/>') %]

<div class="pages" id="homePage">
  <img src="[% crms.GetSystemVar('logo') %]"
       style="display:block;margin-left:auto;margin-right:auto;"
       alt="[% crms.System() %] Logo"/>
    <br/><br/>
    <!--<font size="5"><strong>Hello [% crms.GetUserName %] </strong></font>-->
  <br/>
  <br/>
  [% mail = crms.GetSystemVar('expertsEmail') %]
  [% mail2 = mail.replace('-', '&#8209;') %]
  [% user = crms.get('user') %]
  <div class="warningBox">
    <h2>Hello [% crms.GetUserName %]. You do not have access to this page.</h2>
    <strong><a href="[% crms.Sysify('/cgi/c/crms/crms?p=home') %]">Go to home page</a></strong><br/>
    <strong><a href="[% crms.Sysify('crms?p=Logout') %]"> Logout</a></strong>
  
    <div class="warningSubbox">
      <h4>Security considerations do not allow Copyright Review Management System reviewer
