<hr width="25%" align="left"/>
<h3>click to edit users</h3>

[% users = crms.GetUserData() %]
[% FOREACH user IN users.keys.sort %]
  <div>
    <a href="crms?p=adminEditUser&id=[% users.${user}.id %]">[% users.${user}.name %] 
    ([% users.${user}.types.sort.join(", ") %])</a>
  </div>
[% END %]

