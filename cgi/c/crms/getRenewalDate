#!/usr/bin/perl

my $DLXSROOT;
BEGIN
{
  $DLXSROOT = $ENV{'DLXSROOT'};
}

use strict;
use CGI;
use CRMS;

my $cgi  = new CGI;
my $sys =  $cgi->param('sys') || 'crms';
my $pdb = $cgi->param('pdb');
my $tdb = $cgi->param('tdb');
my $crms = CRMS->new(logFile => $DLXSROOT. '/prep/c/crms/log_getRenewalDate.txt',
                     sys     => $sys,
                     verbose => 0,
                     root    => $DLXSROOT,
                     pdb     => $pdb,
                     tdb     => $tdb);
my $id  = $cgi->param('id');
my $date = $crms->GetRenDate($id);

if ($date eq '') { print $cgi->header( -status => "400" ); }
else
{
  print $cgi->header();
  print $date;
}
