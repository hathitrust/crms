<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link rel="icon" type="image/png" href="[% crms.GetSystemVar('favicon') %]"/>
    <link rel="stylesheet" type="text/css" href="/c/crms/css/datepicker.css"/>
    <meta http-equiv="Content-Script-Type" content="text/javascript"/>
    <meta http-equiv="Content-Style-Type" content="text/css"/>
    <script type="text/javascript" src="/c/crms/js/common.js"></script>
    <script type="text/javascript" src="/c/crms/js/menu.js"></script>
    <script type="text/javascript">
<!--
var gSys = '[% crms.Sys() %]';
-->
    </script>
    <link rel="stylesheet" type="text/css" href="/c/crms/css/review.css"/>
    [% IF page == 'review' OR page == 'corrections' OR page == 'oneoff' %]
      <script type="text/javascript" src="/c/crms/js/review.js"></script>
    [% END %]
    [% where = crms.WhereAmI() %]
    [% IF where %][% title = title _ ' - ' _ where %][% END %]
    <title>[% title %] - [% crms.PageToEnglish(page) %]</title>
  </head>
  <body>
[% page = cgi.param('p') %]
[% r = crms.GetSystemStatus() %]

[% IF page != 'review' && page != 'corrections' && page != 'oneoff' %]
    <div class="pages" id="homePage">
    <div style="height:82px;border-bottom:1px solid black;margin:0px;padding-bottom:6px;">
      <a href="[% crms.Sysify('crms') %]">
        <img src="[% crms.GetSystemVar('logo') %]" width="455" height="80" alt="CRMS Logo"
             style="float:left;border:0px solid;margin-right:4em;"/>
      </a>
      [% IF where %]
        <span style="color:red;font-size:3.2em;">Location:&nbsp;[% where.replace(" ","&nbsp;") %]</span>
      [% END %]
      <div style="float:right;">
        <table class="exportStats">
          <tr>
            <th class="nowrap" style="text-align:right;">
              Hello&nbsp;[% crms.GetUserName().replace(" ","&nbsp;") %]&nbsp;&nbsp;
              <a href="[% crms.Sysify('crms?p=Logout') %]" class="header">logout</a>
            </th>
          </tr>
          <tr>
            <th class="nowrap" style="text-align:right;">
              [% experts = crms.GetSystemVar("expertsEmail") %]
              [% IF experts %]
                <a href="mailto:[% experts %]?subject=CRMS%20Feedback" class="header">
                  <img width="16" height="16" alt="Report error" src="/c/crms/SendIcon.png"/>
                  Click here to report errors
                </a>
              [% END %]
            </th>
          </tr>
          <tr>
           <th style="text-align:right;">[% crms.System() %]&nbsp;version&nbsp;[% crms.Version() %]</th>
          </tr>
          [% IF where %]
            <tr>
              <th style="text-align:right;">Location:&nbsp;[% where.replace(" ","&nbsp;") %]</th>
            </tr>
          [% END %]
        </table>
      </div>
    </div>
    <div>[% INCLUDE nav.tt %]</div>
    <br/><br/>
    [% noauto = ('disabled' == crms.GetSystemVar('autoinherit')) %]
    [% IF noauto && crms.IsUserAdmin() %]
      <span style="color:red;">Automatic Inheritance Processing is disabled.</span><br/><br/>
    [% ELSE %]
      <br/>
    [% END %]
[% ELSE %]
    <div id="homePage">
[% END %]
[% # Don't display the notice if this is the review page and situation normal %]
[% IF r.2 && (page != 'review' || r.1 != 'normal') %]
  <img src="[% crms.GetSystemVar('smallLogo') %]" alt="CRMS Logo"
       width="104" height="80" style="position:absolute;top:20px;left:20px;"/>
  <table style="width:860px;height:80px;border:1px solid #185EAC;background-color:#EEEEFF;position:absolute;top:20px;left:124px;">
  <tr><td>
   [% status = (r.1 == 'down')? 'unavailable':((r.1 == 'partial')? 'partially available':r.1) %]
   <span style="font-size:1.3em;text-align:center;color:#DD4444">System status is <b>[% status %]</b>; last modified [% r.0 %]</span><br/>
   <span style="font-size:1.1em;">[% r.2 %]</span>
   [% IF page == 'review' %]&nbsp;&nbsp;&nbsp;<a href="[% crms.Sysify('crms') %]">Home</a>[% END %]
  </td></tr>
  </table>
[% END %]
[% IF r.1 != 'normal' %]
  [% IF page != 'systemStatus' %]
    [% IF r.1 == 'down' %]
      [% INCLUDE footer.tt %]
      [% STOP %]
    [% END %]
    [% IF (r.1 == 'partial' || r.1 == 'delayed') && (page == 'queueAdd' || page == 'review') %]
      [% INCLUDE footer.tt %]
      [% STOP %]
    [% END %]
  [% END %]
[% END %]
