  <body>
[% r = crms.GetSystemStatus() %]

[% IF page != 'review' %]
    <div class="pages" id="homePage">
    <div style="float:left; margin-right:10em;"><img src="/c/crms/crms.png" alt="CRMS Logo"/></div>
    [%# INCLUDE nav.tt %]
    <div id="version">Version 1.3.8</div>
    <br/><br/>
    <div style="clear:both;">
    <span class="greeting">Hello [% crms.GetUserName() %]</span>
    <a href="crms?p=Logout"> Logout</a>
    </div><br/><br/>
[% ELSE %]
    <div id="homePage">
[% END %]
[% # Don't display the notice if this is the review page and situation normal %]
[% IF r.2 && (page != 'review' || r.1 != 'normal') %]
  [% blah = r.2.replace('\s','&nbsp;') %]
  <table style="text-align:center;width:654px;height:115px;border:1px solid #000000;font-size:1.8em;background-color:#FFFFFF;position:absolute;top:20px;left:20px;">
  <tr><td>[% r.2 %]</td></tr>
  </table>
[% END %]
[% IF r.1 != 'normal' %]
  [% page = cgi.param('p') %]
  [% IF page != 'debug' %]
    [% IF r.1 == 'down' %]
      [% INCLUDE footer.tt %]
      [% STOP %]
    [% END %]
    [% IF r.1 == 'partial' && (page == 'queueAdd' || page == 'review') %]
      [% INCLUDE footer.tt %]
      [% STOP %]
    [% END %]
  [% END %]
[% END %]
