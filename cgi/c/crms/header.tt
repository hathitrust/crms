<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Strict//EN">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="stylesheet" type="text/css" href="/c/crms/css/review.css"/>
    [% page = cgi.param('p') %]
    [% dev = crms.get('dev') %]
    [% IF dev %]
      [% fulltitle = title _ ' - ' _ 'Development' %]
      [% IF dev != 1 %]
        [% fulltitle = fulltitle _ ' (' _ dev _ ')' %]
      [% ELSE %]
      [% END %]
    [% END %]
    [% fulltitle = fulltitle _ ' - ' _ crms.PageToEnglish(page) %]
    <title>[% fulltitle %]</title>
  </head>
  <body>
  <div class="pages" id="homePage">
    <img src="/c/crms/crms.png" alt="CRMS Logo"/><div id="version">Version 1.3</div>
    <br/><br/>
    <font size="5"><strong>Hello [% crms.GetUserName %] </strong></font>
    <a href="crms?p=Logout"> Logout</a>
    [% FOREACH error IN crms.GetErrors %]
      <strong>ERROR: [% error %]</strong>
      <br/>
    [% END %]
<br/>
<br/>

