    <link rel="stylesheet" type="text/css" href="/c/crms/css/datepicker.css"/>
    [% END %]
    [% dev = crms.get('dev') %]
    [% fulltitle = title %]
    [% IF dev %]
      [% fulltitle = fulltitle _ ' - ' _ 'Development' %]
      [% IF dev != 1 %]
        [% fulltitle = fulltitle _ ' (' _ dev _ ')' %]
      [% END %]
    [% END %]
